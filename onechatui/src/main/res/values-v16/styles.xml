<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AmountBig">
        <item name="android:textSize">@dimen/amount_text_size_big</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/big_amount_text_color</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_500</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/primary_500</item>

        <item name="android:overScrollMode">never</item>
    </style>
</resources>