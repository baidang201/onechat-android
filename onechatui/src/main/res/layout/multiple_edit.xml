<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color_level1"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_simple_10">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:lineSpacingExtra="@dimen/line_space_multiple"
            android:textColor="@color/black_second"
            android:textColorHint="@color/hint_gray"
            android:textCursorDrawable="@drawable/curcle_bg"
            android:textSize="@dimen/text_size_14" />
    </ScrollView>
</LinearLayout>