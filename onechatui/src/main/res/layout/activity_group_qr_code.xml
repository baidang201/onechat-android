<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color_level1"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/ll_group_qr_code"
        android:layout_width="@dimen/group_qr_ll_weight"
        android:layout_height="@dimen/group_qr_ll_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/simple_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:paddingTop="@dimen/dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_group_avatar"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_group_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_group_qrcode"
            android:layout_width="@dimen/group_qrcode_weight_height"
            android:layout_height="@dimen/group_qrcode_weight_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_30"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/tv_group_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_weight="1"
            android:textColor="@color/base_text_gray_83"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_long_press"
            android:layout_width="@dimen/dimen_160"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/tuoyuan_base_color_small_bg"
            android:gravity="center"
            android:text="@string/save_to_phone"
            android:textColor="@color/base_bg_color_level1"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_share_qrcode"
            android:layout_width="@dimen/dimen_160"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/tuoyuan_base_color_small_bg"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/base_bg_color_level1"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>
