<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60"
    android:background="@color/base_bg_color_level1"
    android:gravity="center"
    android:minHeight="@dimen/dimen_60"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_14">

    <LinearLayout
        android:id="@+id/ll_weibo_msg"
        android:layout_width="@dimen/dimen_140"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_5"
        android:background="@drawable/weibo_new_msg_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_little_4">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:scaleType="centerCrop"
            android:src="@drawable/default_other_head" />

        <TextView

            android:id="@+id/tv_weibo_msg_num"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:textColor="@color/base_bg_color_level1"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:layout_width="@dimen/dimen_14"
            android:layout_height="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_4"
            android:src="@drawable/right" />
    </LinearLayout>


</LinearLayout>