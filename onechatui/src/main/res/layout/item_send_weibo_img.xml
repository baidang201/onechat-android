<?xml version="1.0" encoding="utf-8"?>
<onemessageui.widght.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_grida_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_simple_10"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image" />

    <ImageView
        android:id="@+id/iv_delect"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_gravity="right|top"
        android:padding="@dimen/padding_little_5"
        android:src="@drawable/icon_black_delete" />
</onemessageui.widght.SquareLayout>