<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_120"
    android:layout_height="@dimen/dimen_120"
    android:background="@drawable/tuoyuan_bg"
    android:gravity="center"
    android:orientation="vertical">

    <onemessageui.widght.ProgressWheel
        android:id="@+id/upload_progress"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        app:pwBarColor="@color/base_color"
        app:pwBarWidth="@dimen/dimen_1"
        app:pwRimColor="@color/toumin"
        app:pwRimWidth="@dimen/dimen_1"
        app:pwSpinSpeed="3dp"
        app:pwText="0%"
        app:pwTextColor="@color/base_color"
        app:pwTextSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_upload_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_little_5"
        android:text="@string/video_uploading"
        android:textColor="@color/base_text_color_level2"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
