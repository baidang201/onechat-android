<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_titleStyle1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/title_popup_width"
        android:paddingLeft="@dimen/margin_simple_10"
        android:paddingRight="@dimen/margin_simple_10"
        android:text="@string/app_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_1dp"
        android:background="@color/base_line_bg_color" />
</LinearLayout>