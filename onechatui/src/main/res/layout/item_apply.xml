<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60"
    android:background="@drawable/base_click_bg_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_8"
    android:paddingRight="@dimen/padding_8"
    android:paddingTop="@dimen/padding_8">

    <LinearLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10"
            android:src="@drawable/default_other_head" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/onechat_id"
                android:textColor="@color/base_text_color_level1"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/onechat_id"
                android:textColor="@color/push_content_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_little_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="@dimen/manage_silent_weight"
                android:layout_height="@dimen/manage_silent_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/btn_refuse"
                android:gravity="center"
                android:text="@string/button_refuse"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_10" />

            <TextView
                android:id="@+id/tv_already"
                android:layout_width="@dimen/manage_silent_weight"
                android:layout_height="@dimen/manage_silent_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center"
                android:textColor="@color/base_text_gray_83"
                android:textSize="@dimen/dimen_10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="@dimen/manage_silent_weight"
                android:layout_height="@dimen/manage_silent_height"
                android:layout_gravity="center"
                android:background="@drawable/btn_agree"
                android:gravity="center"
                android:text="@string/button_agree"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_10" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>