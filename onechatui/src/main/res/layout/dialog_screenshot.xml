<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="160dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:background="@drawable/tuoyuan_top_normal_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_large_15"
        android:paddingRight="@dimen/padding_large_15"
        android:textColor="@color/base_text_color_level1"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/dialog_msg_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:paddingLeft="@dimen/padding_large_15"
        android:paddingRight="@dimen/padding_large_15"
        android:textColor="@color/simple_text_color"
        android:background="@color/base_bg_color_level1"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_bg_color_level2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tuoyuan_bottom_right_bg"
            android:gravity="center"
            android:text="@string/button_confirm"
            android:textColor="@color/base_color" />
    </LinearLayout>
</LinearLayout>