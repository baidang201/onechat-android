<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/edit_dialog_width"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tuoyuan_top_normal_bg"
        android:orientation="vertical"
        android:padding="@dimen/padding_large_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_msg_tv"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_password"
                android:textColor="@color/simple_text_color"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_little_5"
                android:text="@string/forget_password"
                android:textColor="@color/blue_simple"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_edit_et"
            style="@style/edittext_line_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large_15"
            android:inputType="textPassword"
            android:lines="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_bg_color_level2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tuoyuan_bottom_left_bg"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="@color/base_text_gray" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/base_bg_color_level2" />

        <TextView
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tuoyuan_bottom_right_bg"
            android:gravity="center"
            android:text="@string/button_confirm"
            android:textColor="@color/base_color" />
    </LinearLayout>
</LinearLayout>
