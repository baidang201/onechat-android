<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/select_asset_dialog_width"
    android:layout_height="@dimen/select_asset_dialog_height"
    android:background="@drawable/simple_shadow_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_simple_10">

        <TextView
            android:id="@+id/tv_asset_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_12"
            android:text="@string/select_coin_type"
            android:textColor="@color/black_second"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_12"
            android:padding="@dimen/line_space_extra"
            android:text="@string/from_transaction_account"
            android:textColor="@color/base_text_gray_83"
            android:textSize="@dimen/text_size_12" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/temp_simple_height"
        android:layout_marginTop="@dimen/margin_simple_10"
        android:background="@color/base_background_bg" />

    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_simple_10"
        android:layout_marginRight="@dimen/margin_simple_10"
        android:layout_marginTop="@dimen/margin_simple_10"
        android:background="@drawable/search_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_simple_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/margin_large_15"
            android:layout_height="@dimen/margin_large_15"
            android:src="@drawable/search_icon" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/accountname_search"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:textColor="@color/black_second"
            android:textColorHint="@color/hint_gray"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <ListView
        android:id="@+id/dialog_asset_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_marginBottom="@dimen/margin_simple_10"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_0"
        android:listSelector="@color/toumin"
        android:scrollbars="none" />

</LinearLayout>
