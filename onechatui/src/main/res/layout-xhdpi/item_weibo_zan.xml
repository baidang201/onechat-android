<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg_color_level1"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_large_15"
    android:paddingRight="@dimen/padding_large_15"
    android:paddingTop="@dimen/padding_large_15">

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:src="@drawable/default_other_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_simple_10"
                android:textColor="@color/black_second"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_zan_time"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_simple_10"
                android:layout_weight="1"
                android:textColor="@color/base_text_gray"
                android:textSize="@dimen/text_size_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginBottom="@dimen/margin_little_3"
            android:layout_marginLeft="@dimen/margin_simple_10"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zanshang"
                android:textColor="@color/black_second"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_zan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/margin_simple_10"
            android:background="@color/base_background_bg" />
    </LinearLayout>
</LinearLayout>