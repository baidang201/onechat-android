<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/base_bg_color_level1"
    android:orientation="vertical">

    <!-- 聊天窗口 底部工具栏 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/view_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attach_picture"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attach_take_pic"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attach_location"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/view_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_send_file" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attach_file"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_asset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_asset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fast_transfer"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_red_packet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_red_packet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/red_packet"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/all_noticafitions" />

            <TextView
                android:id="@+id/tv_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_all_banned_topost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/all_banned_topost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/chat_all_banned_to_post"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/chat_tool_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attach_video_call"
                android:textColor="@color/base_text_color_level2"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>