<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg_color_level1">

    <RelativeLayout
        android:layout_width="56dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_userhead_bg"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/group_owner_avatar_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/dimen_20"
            android:padding="@dimen/dimen_2"
            android:src="@drawable/default_other_head" />

        <ImageView
            android:id="@+id/badge_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_avatar"
            android:layout_alignTop="@id/iv_avatar"
            android:src="@drawable/appitem_del_btn"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/iv_avatar"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/base_text_color_level1"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>