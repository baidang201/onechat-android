<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/simple_dialog_width"
    android:layout_height="@dimen/simple_dialog_height"
    android:background="@drawable/tuoyuan_bg"
    android:gravity="center"
    android:orientation="vertical">

    <onemessageui.widght.ProgressWheel
        android:id="@+id/download_progress"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        app:pwBarColor="@color/base_color"
        app:pwBarWidth="@dimen/dimen_2"
        app:pwRimColor="@color/toumin"
        app:pwRimWidth="@dimen/dimen_2"
        app:pwSpinSpeed="@dimen/dimen_2"
        app:pwText="0%"
        app:pwTextColor="@color/base_color"
        app:pwTextSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_download_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_15"
        android:gravity="center"
        android:textColor="@color/simple_text_color"
        android:textSize="@dimen/text_size_16" />


</LinearLayout>
