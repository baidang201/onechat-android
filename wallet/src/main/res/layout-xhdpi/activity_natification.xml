<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_setting_item_height"
        android:layout_marginTop="@dimen/temp_simple_height"
        android:background="@color/base_bg_color_level1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_large_18"
        android:paddingRight="@dimen/margin_large_18">

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/push_notify"
            android:textColor="@color/black_second"
            android:textSize="@dimen/text_size_14" />

        <onemessageui.widght.switchbutton.SwitchButton
            android:id="@+id/sb_new_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onColor="@color/base_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_setting_item_height"
        android:layout_marginTop="@dimen/temp_simple_height"
        android:background="@color/base_bg_color_level1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_large_18"
        android:paddingRight="@dimen/margin_large_18">

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/if_set_new_msg"
            android:textColor="@color/black_second"
            android:textSize="@dimen/text_size_14" />

        <onemessageui.widght.switchbutton.SwitchButton
            android:id="@+id/sb_new_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onColor="@color/base_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_setting_item_height"
        android:layout_marginTop="@dimen/temp_simple_height"
        android:background="@color/base_bg_color_level1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_large_18"
        android:paddingRight="@dimen/margin_large_18"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_voice"
            android:textColor="@color/black_second"
            android:textSize="@dimen/text_size_14" />

        <onemessageui.widght.switchbutton.SwitchButton
            android:id="@+id/sb_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onColor="@color/base_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shake_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_setting_item_height"
        android:layout_marginTop="@dimen/temp_simple_height"
        android:background="@color/base_bg_color_level1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_large_18"
        android:paddingRight="@dimen/margin_large_18"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_shake"
            android:textColor="@color/black_second"
            android:textSize="@dimen/text_size_14" />

        <onemessageui.widght.switchbutton.SwitchButton
            android:id="@+id/sb_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onColor="@color/base_color" />

    </LinearLayout>
</LinearLayout>
