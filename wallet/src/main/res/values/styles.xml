    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 标题1样式 -->
    <style name="txt_titleStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_text_color_level1</item>
    </style>
    <!-- 内容1样式 -->
    <style name="txt_ContextStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 图片样式 -->
    <style name="img_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbog_style</item>
    </style>

    <style name="TxtTitle" parent="@style/img_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="MMListCatalog">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff595c61</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/base_background_bg</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMFontTitleInList">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/base_text_color_level1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MMFontTag">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/base_bg_color_level1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingTop">2dip</item>
    </style>
    <!-- PopWindows -->


    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_500</item>
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/primary_500</item>
        <item name="android:colorBackground">@color/base_background_bg</item>

        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/base_bg_color_level1</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_white</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/color_white</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Special Button styles -->

    <!-- Font icons -->
    <style name="FontIconBig" parent="NormalText">
        <item name="android:textSize">@dimen/font_icon_text_size</item>
        <item name="android:textColor">@color/base_text_color_level3</item>
        <item name="android:background">@drawable/font_icon_bg</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!-- Generic text styles -->
    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/highlight_text_color</item>
        <item name="android:textColorLink">@color/highlight_text_color</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/base_text_color_level1</item>
    </style>

    <style name="SmallHelpText" parent="SecondaryText">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="SeedText" parent="">
        <item name="android:textColor">@color/base_color</item>
        <item name="android:textSize">@dimen/seed_text_size</item>
    </style>

    <!-- PagerTabStrip style -->
    <style name="PagerTabStrip" parent="NormalText">
        <item name="android:background">@color/base_bg_color_level1</item>
        <item name="android:textColor">@color/black_second</item>
    </style>

    <!-- Widget amount style -->
    <style name="Amount" parent="NormalText">
        <item name="android:textColor">@color/highlight_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AmountBig" parent="Amount">
        <item name="android:textSize">@dimen/amount_text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/big_amount_text_color</item>
    </style>

    <style name="AmountSmall" parent="Amount">
        <item name="android:textColor">@color/base_text_color_level1</item>
        <item name="android:textSize">@dimen/amount_text_size_small</item>
    </style>

    <style name="AmountSymbol" parent="SecondaryText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/base_text_color_level1</item>
    </style>

    <style name="AmountSymbolBig" parent="AmountSymbol">
        <item name="android:textSize">@dimen/amount_symbol_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/big_amount_text_color</item>
    </style>

    <style name="AmountSymbolSmall" parent="AmountSymbol">
        <item name="android:textSize">@dimen/amount_text_size_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/base_text_color_level1</item>
    </style>

    <!-- Widget send output -->
    <style name="SendOutputTypeText" parent="NormalText">
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="SendOutputAmount" parent="NormalText">
        <item name="android:textSize">@dimen/send_output_amount_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Transaction row -->

    <style name="TransactionRowDirectionText" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_text_size_direction_text</item>
    </style>

    <style name="AddressRowLabel" parent="NormalText">
        <item name="android:textSize">@dimen/row_text_size_label</item>
    </style>

